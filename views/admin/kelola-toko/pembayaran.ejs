    <h1 class="font-bold text-3xl text-center my-10">Daftar Pembayaran</h1>
    <div class="flex justify-between w-full h-8 mb-5">
        <div></div>
        <p class="bg-blue-600 px-2 w-24 rounded ml-0 font-semibold text-center h-8 pt-1 right-0 mr-5"><button type="button">
                <a href="/admin/tambah-pembayaran">Tambah</a>
            </button></p>
    </div>

    <div class="flex flex-col">
        <div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
            <div class="inline-block min-w-full py-2 sm:px-6 lg:px-8">
                <div class="overflow-hidden">
                    <table class="min-w-full border text-center text-sm font-light dark:border-black">
                        <thead class="border-b font-medium dark:border-black">
                            <tr class="bg-black text-white">
                                <th scope="col" class="border-r dark:border-black">
                                    No 
                                </th>
                                <th scope="col" class="border-r dark:border-black">
                                    Nama BANK
                                </th>
                                <th scope="col" class="border-r dark:border-black">
                                    Gambar
                                </th>
                                <th scope="col" class="border-r dark:border-black">
                                    Nama Pemilik
                                </th>
                                <th scope="col" class="border-r px-6 py-4 dark:border-black">
                                    No Tujuan
                                </th>
                                <th scope="col" class="">Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(let i=0; i < pembayaran.length; i++){ %>
                            <tr class="border-b dark:bg-gray-600">
                                <td class="whitespace-nowrap border-r border-b font-bold dark:border-black">
                                    <%= i+1 %> 
                                </td>
                                <td class="whitespace-nowrap border-r border-b dark:border-black">
                                    <h3 class="font-bold text-center text-lg"><%= pembayaran[i].Nama %></h3>
                                </td>
                                <td class="whitespace-nowrap border-r border-b dark:border-black p-auto">
                                    <img class="w-4/5 h-40 mx-auto my-1" src="<%= pembayaran[i].UrlGambar %>" alt="">
                                </td>
                                <td class="border-r border-b px-6 py-4 max-w-xs dark:border-black ">
                                    <h3 class="font-bold text-center text-lg"><%= pembayaran[i].Nama_Pemilik %></h3>
                                </td>
                                <td class="whitespace-nowrap border-r border-b px-6 py-4 dark:border-black">
                                    <h3 class="font-bold text-center text-lg"><%= pembayaran[i].Nomor_Tujuan %></h3>
                                </td>
                                <td class="whitespace-nowrap border-r border-b py-4 max-w-xs dark:border-black">
                                <div class="mx-auto flex flex-col text-black text-center px-auto">
                                    <a class="my-1" href="/admin/perbarui-pembayaran/<%= pembayaran[i].id %>"><button class="bg-white rounded font-bold w-20 h-7 text-center"
                                            type="button">Perbarui</button></a>
                                    <a class="my-1" href="/admin/hapus-pembayaran/<%= pembayaran[i].id %>"><button class="bg-white rounded font-bold w-20 h-7 text-center"
                                            type="button">Hapus</button></a>
                                </div>
                                </td>
                            </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</body>
<script src="https://cdn.jsdelivr.net/npm/tw-elements/dist/js/tw-elements.umd.min.js"></script>
