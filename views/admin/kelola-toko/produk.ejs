<!DOCTYPE html>
<html lang="en">

<!-- Head -->
<%- include('../../partials/admin/head.ejs') %>
<!-- Head -->

<body class="bg-white">
   
    <%- include('../../partials/admin/navbar.ejs') %>

    <!-- Sidenav -->
    <%- include('../../partials/admin/sidebar.ejs') %>
    <!-- Sidenav -->

    <% if(alert.message !='' ) { %>
        <div class="m-2">
            <%- include('../../partials/alert.ejs') %>
        </div>
        <% } %>

    <h1 class="font-bold text-3xl text-center my-10">Daftar Produk</h1>
    <div class="flex justify-between w-full hy-8 hl-8 mb-5">
        <div></div>
        <p class="bg-blue-600 px-2 w-24 rounded ml-0 font-semibold text-center h-8 pt-1 right-0 mr-5"><button type="button">
                <a href="/admin/tambah-produk">Tambah</a>
            </button></p>
    </div>

    <div class="flex flex-col">
        <div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
            <div class="inline-block min-w-full py-2 sm:px-6 lg:px-8">
                <div class="overflow-hidden">
                    <table class="min-w-full border text-center text-sm font-light dark:border-black">
                        <thead class="border-b font-medium dark:border-black">
                            <tr class="bg-black text-white">
                                <th scope="col" class="border-r dark:border-black">
                                    No Produk
                                </th>
                                <th scope="col" class="border-r dark:border-black">
                                    Gambar Produk
                                </th>
                                <th scope="col" class="border-r dark:border-black">
                                    Nama Produk
                                </th>
                                <th scope="col" class="border-r px-6 py-4 dark:border-black">
                                    Keterangan
                                </th>
                                <th scope="col" class="border-r px-6 py-4 dark:border-black">
                                    Stok Produk
                                </th>
                                <th scope="col" class="border-r px-6 py-4 dark:border-black">
                                    Harga
                                </th>
                                <th scope="col" class="">Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(let i=0; i < produk.length; i++){ %>
                            <tr class="border-b dark:bg-gray-600">
                                <td class="whitespace-nowrap border-r border-b font-bold dark:border-black">
                                    <%= i+1 %>
                                </td>
                                <td class="whitespace-nowrap border-r border-b dark:border-black p-auto">
                                    <img class="w-40 h-40 mx-auto my-1" src="<%= produk[i].UrlProduk %>" alt="">
                                </td>
                                <td class="whitespace-nowrap border-r border-b dark:border-black">
                                    <h3 class="font-bold text-center text-lg"><%= produk[i].Nama_Produk %></h3>
                                </td>
                                <td class="border-r border-b px-6 py-4 font max-w-xs dark:border-black ">
                                    <%= produk[i].Deksripsi_Produk %>
                                </td>
                                <td class="whitespace-nowrap border-r border-b px-6 py-4 dark:border-black">
                                    <h3 class="font-bold text-center text-lg"><%= produk[i].Stok_Produk %></h3>
                                </td>
                                <td class="whitespace-nowrap border-r border-b px-6 py-4 dark:border-black">
                                    <h3 class="font-bold text-center text-lg"><%= produk[i].Harga_Produk %></h3>
                                </td>
                                <td class="whitespace-nowrap border-r border-b py-4 max-w-xs dark:border-black">
                                <div class="mx-auto flex flex-col text-black text-center px-auto">
                                    <a class="my-1" href="/admin/perbarui-produk/<%= produk[i].id %>"><button class="bg-white rounded font-bold w-20 h-7 text-center"
                                            type="button">Perbarui</button></a>
                                    <a class="my-1" href="/admin/hapus-produk/<%= produk[i].id %>"><button class="bg-white rounded font-bold w-20 h-7 text-center"
                                            type="button">Hapus</button></a>
                                </div>
                                </td>
                            </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</body>
<script src="https://cdn.jsdelivr.net/npm/tw-elements/dist/js/tw-elements.umd.min.js"></script>
<script src="js/myscript.js"></script>

</html>