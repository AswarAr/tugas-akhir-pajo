<!DOCTYPE html>
<html lang="en">

<%- include('../partials/admin/head.ejs') %>

<body class="bg-gray-400 p-4">

    <% if(alert.message !='' ) { %>
        <%- include('../partials/alert.ejs') %>
    <% } %>
    
    <form action="/login" method="POST">
        <div class="h-auto px-10 py-5 mx-auto my-40 rounded-lg w-96">
            <h1 class="mb-5 font-bold text-center  text-4xl">Login</h1>
            <h1 class="font-semibold">Username</h1>
            <input type="email" name="email" class="w-full px-2 rounded bg-zinc-600 h-12" placeholder="@Username"
                required>
            <h1 class="font-semibold">Password</h1>
            <input type="password" name="password" class="w-full px-2 bg-zinc-600 rounded h-12" placeholder="@Password"
                required>
            <p class="text-center mb-14">Lupa Password?</p>
            <button class="ml-20 w-40 font-semibold bg-zinc-600 h-10 text-cyan-50 hover:font-bold" type="submit">
                Login
            </button>
            <p class="text-center"><a href="/register" class="hover:font-light">Buat Akun</a></p>
        </div>
    </form>
    <script src="https://cdn.jsdelivr.net/npm/tw-elements/dist/js/tw-elements.umd.min.js"></script>
</body>

</html>